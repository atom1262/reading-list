  <tbody>
      <tr class="<%= 'finished' if book.finished? %>">
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= image_from_amazon(book.amazon_id) %></td>
        <td><%= book.finished? %></td>
        <td><%= book.rating %></td>
        <td><% book.genres.each do |genre| %>
          <%= genre.name %>
        <% end %>
        </td>
        <td><% @genres.each do |genre| %>
          <%= link_to genre.name, books_path(filter: genre.name) %>
        <% end %>
        </td>
      </tr>
  </tbody>
</table>
