<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Amazon</th>
      <th>Have you read it?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class="<%= 'finished' if book.finished? %>">
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.amazon_id %></td>
        <td><%= book.finished? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
